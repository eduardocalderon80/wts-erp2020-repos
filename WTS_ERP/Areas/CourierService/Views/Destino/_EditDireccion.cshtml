                    <select id="cbo_edit_distrito" class="form-control _select2 _enty" data-id="iddistrito" style="width:100%"></select>
                </div>
            </div>
            <div class="form-horizontal row">
                <div class="col-sm-4">
                    <label class="control-label">Ruta:</label>
                    <select id="cbo_edit_ruta" class="form-control _select2 _enty" data-id="idruta" data-required="true" style="width:100%"></select>
                </div>
                <div class="col-sm-4">
                    <label class="control-label">Latitud:</label>
                    <input id="txt_edit_latitud" type="text" class="form-control _enty" data-id="latitud" data-required="true">
                </div>
                <div class="col-sm-4">
                    <label class="control-label">Longitud:</label>
                    <input id="txt_edit_longitud" type="text" class="form-control _enty" data-id="longitud" data-required="true">
                </div>
            </div>
        </div>

    </div>
</div>

