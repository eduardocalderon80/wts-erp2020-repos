                            <input id="txtfechadesde" type='text' class='form-control _enty' data-type="date" data-min="10" data-max="10" data-level="true" data-id="fechacese">
                            <div id="divcalendariodesde" class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <label class="control-label">Until :</label>
                        <div id="divfechahasta" class='input-group date'>
                            <input id="txtfechahasta" type='text' class='form-control _enty' data-type="date" data-min="10" data-max="10" data-level="true" data-id="fechacese">
                            <div id="divcalendariohasta" class="input-group-addon">
                                <span class="fa fa-calendar"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-horizontal row">
                    <div id="divBotonesSecundarios" class="col-sm-12  text-left">
                        <button id="btnedit" type="button" title="Edit" class="btn btn-outline btn-success">
