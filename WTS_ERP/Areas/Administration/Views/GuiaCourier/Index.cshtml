                        <select id="cbotipo" class="form-control _enty select2_tipo" style="width:100%" name="idtipo" data-id="idtipo" data-required="true"></select>
                    </div>

                    <div class="col-sm-3">
                        <label class="control-label">Name</label>
                        <select id="cbonombre" class="form-control _enty select2_nombre" style="width:100%" name="idtipodata" data-id="idtipodata" data-required="true"></select>
