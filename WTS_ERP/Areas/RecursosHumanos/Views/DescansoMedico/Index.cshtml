<div class="ibox" id="panelEncabezado_DescansoMedicoIndex">
    <div class="hide">
        <input type="text" id="txtpar" value="DATA-PARAMETRO" />
    </div>
    <div class="row wrapper border-bottom white-bg page-heading">        
        <div class="col-lg-6">
            <h2 class="font-bold">Descanso Medico</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <i class="fa fa-home"></i>
                </li>
                <li class="breadcrumb-item">
                    Gestion de Talento
                </li>
                <li class="breadcrumb-item active">
                    <strong>Descanso Medico</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-6 text-right" style="padding-top:20px">
            <button type="button" class="btn btn-default" id="btnNew">
                <span class="fa fa-plus"> </span>
                Nuevo
            </button>
            <button type="button" class="btn btn-success" id="btnReporte">
                <span class="fa fa-file-excel-o"> </span>
                Reporte
            </button>
            <button type="button" class="btn btn-primary" id="btnSearch">
                <span class="fa fa-refresh"> </span>
                Actualizar
            </button>
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="row animated fadeInRight">
            <div class="col-lg-12" id="div_colaboradores"></div>
        </div>
        <div class="row animated fadeInRight">
            <div class="col-lg-6 hide" id="ibox-topten">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 id="title_grafico_tabla">Cantidad de Descansos Medicos acumuladas por colaborador</h5>
                        <div class="ibox-tools">
                            <a class="fullscreen-link">
                                <i class="fa fa-expand"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content" id="ibox-content_top">
                        <div id="div_grafico_tabla">
                            <table class="table table-hover" style="margin-bottom: 0;">
                                <thead>
                                    <tr>
                                        <th style="width: 1%" class="text-center">No.</th>
                                        <th>Nombre</th>
                                        <th class="text-center">Dias</th>
                                    </tr>
                                </thead>
                                <tbody id="tbody_top"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 hide" id="ibox-graficobar">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 id="h5-ibox-graficobar">Gráficos</h5>
                        <div class="ibox-tools">
                            <a class="fullscreen-link">
                                <i class="fa fa-expand"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content" id="ibox-content-ibox-graficobar">
                        <canvas id="barChart" height="140"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 hide" id="ibox-graficopie">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5 id="h5-ibox-graficopie">Gráficos</h5>
                        <div class="ibox-tools">
                            <a class="fullscreen-link">
                                <i class="fa fa-expand"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content" id="ibox-content-ibox-graficopie">
                        <canvas id="doughnutChart" height="140"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 hide" id="ibox-todosgraficos">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        @*<h5 id="h5">Gráficos</h5>*@
                        <div class="ibox-tools">
                            <h5>Gráficos</h5>
                            <a class="fullscreen-link">
                                <i class="fa fa-expand"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content" id="ibox-content_graficos">
                        <div id="ggeneral">
                            <div data-toggle="buttons" class="btn-group text-center" style="margin-bottom:10px" id="divbotonesgrafico">
                                <span class="btn btn-sm btn-white gbar active"><i class="fa fa-bar-chart-o"></i> <input type="radio" id="option1" name="options"> Días de Descanso Medico por Año <span class="actual_year"></span> </span>
                                <span class="btn btn-sm btn-white gpie"><i class="fa fa-pie-chart"></i> <input type="radio" id="option2" name="options"> Número de Solicitudes por Estado </span>
                            </div>
                            <div id="gbar">
                                <canvas id="barChartJefe" height="140"></canvas>
                            </div>
                            <div id="gpie" class="hide">
                                <canvas id="doughnutChartJefe" height="140"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12" id="ibox-2">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Descansos Medicos Registrados</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="fullscreen-link">
                                <i class="fa fa-expand"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="form-group">
                            <div class="form-horizontal row">
                                <div class="col-sm-10">
                                    <input type="text" placeholder="Buscar Solicitud" class="input form-control" id="txtBuscar">
                                </div>
                                <div class="col-sm-2">
                                    <select id="cboEstado" class="form-control">
                                        <option value="">Todos</option>
                                        <option value="Por Aprobar">Por Aprobar</option>
                                        <option value="Aprobado">Aprobado</option>
                                        <option value="Cancelado">Cancelado</option>
                                        <option value="Rechazado">Rechazado</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div id="div_tbl_solicitudes" class="table-responsive"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
