<div id="pnl_solicitud_list">

    <div id="pnl_solicitud_list_header" class="row wrapper white-bg page-heading">
        <div class="ibox">
            <div class="col-sm-6">
                <h2 class="font-bold">Servicios de Courier</h2>
            </div>
            <div id="div_botones_header_solicitud_list" class="col-sm-6 text-right" style="padding-top:1%">
                <button id="btn_new_solicitud_list" type="button" class="btn btn-outline btn-success">
                    <span class="fa fa-plus"></span>
                    Nuevo
                </button>
                <button id="btn_return_solicitud_list" type="button" class="btn btn-outline btn-default">
                    <span class="fa fa-reply-all"></span>
                    Regresar
                </button>
            </div>
        </div>
    </div>

    <div id="pnl_solicitud_list_body" class="row wrapper-content gray-bg animated">

        <div id="content_form" class="ibox">

            <div class="ibox-title">
                <div class="form-horizontal row ">
                    <div class="col-sm-6">
                        <h3 id="_title" class="text-success bold">Lista de Solicitudes</h3>
                    </div>
                    <div class="col-sm-6 text-right hide">                        
                    </div>
                </div>
            </div>

            <div id="div_items_busqueda" class="ibox-content">

                <div class="form-horizontal row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Destino:</label>
                            <div class="col-sm-9">
                                <input id="txt_destino_solicitud_list" type="text" class="form-control" data-id="destino">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Movilidad:</label>
                            <div class="col-sm-9">
                                <select id="cbo_vehiculo" class="form-control _select2 _enty" data-id="idvehiculo" data-required="true" style="width:100%"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Estado:</label>
                            <div class="col-sm-9">
                                <select id="cbo_estado" class="form-control _select2 _enty" data-id="codigoestado" data-required="true" style="width:100%"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-horizontal row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Desde:</label>
                            <div id="div_fecha_desde" class="col-sm-9">
                                <div class='input-group date'>
                                    <input id="txt_fecha_desde" type='text' disabled class='form-control input-sm m-b-xs _enty' data-type="date" data-id="fechadesde" data-min="10" data-max="10">
                                    <div id="div_calendario_desde" class="input-group-addon">
                                        <span class="fa fa-calendar"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label col-sm-3">Hasta:</label>
                            <div id="div_fecha_hasta" class="col-sm-9">
                                <div class='input-group date'>
                                    <input id="txt_fecha_hasta" type='text' disabled class='form-control input-sm m-b-xs _enty' data-type="date" data-id="fechahasta" data-min="10" data-max="10">
                                    <div id="div_calendario_hasta" class="input-group-addon">
                                        <span class="fa fa-calendar"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="div_botones_terciarios" class="col-sm-4 text-left">
                        <button id="btn_search_solicitud_list" title="Buscar" type="button" class="btn btn-outline btn-info">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>

            </div>   

        </div>

        <div class="ibox">
            <div class="ibox-content">

                <div class="form-horizontal row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <div id="div_tabla_solicitud_list" class="col-sm-12">
                                <div class="table-responsive">
                                    <table id="tbl_solicitud" class="footable table table-striped table-bordered table-hover" data-page-size="20" data-filter=#buscador>
                                        <thead>
                                            <tr>
                                                <th class='col-sm-3 text-center' data-sort-ignore="true">Destino</th>
                                                <th class='col-sm-1 text-center' data-sort-ignore="true">Fecha</th>
                                                <th class='col-sm-1 text-center' data-sort-ignore="true">Turno</th>
                                                <th class='col-sm-1 text-center' data-sort-ignore="true">Hora</th>
                                                <th class='col-sm-3 text-center' data-sort-ignore="true">Enviado Por</th>
                                                <th class='col-sm-2 text-center' data-sort-ignore="true">Movilidad</th>
                                                <th class='col-sm-1 text-center' data-sort-ignore="true">Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="7">
                                                    <ul class="pagination pull-right"></ul>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</div>