
<div class="ibox float-e-margins" id="panelEncabezado_corretechpack">
    <div class="ibox-title">
        <div class="row">
            <div class="col-sm-6">
                <h3 id="_title" class="text-navy bold">Send Mail</h3>
            </div>
            <div class="col-sm-6 text-right">
                <!-- BOTONES-->
                <button type="button" class="btn btn-primary" id="btnEnviarCorreo">
                    <span class="fa fa-envelope"></span>
                    Send
                </button>
                <button type="button" class="btn btn-default" id="btnCancelarCorreo" data-dismiss="modal">
                    <span class="fa fa-ban"></span>
                    Return
                </button>
            </div>
        </div>
    </div>
    
    <div class="ibox-content wrapper wrapper-content gray-bg" style="overflow-y: auto; max-height: 850px;" id="div_cuerpoprincipal_estilotechpack">
        <div class="hide">
            <!--INPUTS HIDE-->
            <input type="text" id="txtpar_correotechpack" class="cls_par_correotechpack" value="DATA-PARAMETRO" />
        </div>

        <div class="ibox float-e-margins" id="div_mail">
            <div class="ibox-title">
                <h5 class="text-navy bold">Mail</h5>
            </div>
            <div class="ibox-content">
                <div class="panel-body">
                    <div class="form-horizontal">
                        <!-- :aqui -->
                        <div class="form-group">
                            <label class="control-label col-sm-2">To</label>
                            <div class="col-sm-10">
                                <input class="form-control _enty validarCorreo" id="txtTo" data-required="true" data-min="1" data-max="1000" data-id="to_address_mail" />
                                <span class="hide text-danger error_correo" id="_error_estilotechpack_txtTo">Incorrrect Format</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">CC</label>
                            <div class="col-sm-10">
                                <input class="form-control _enty validarCorreo" id="txtCC" data-required="false" data-min="1" data-id="copy_recipients_mail" />
                                <span class="hide text-danger error_correo" id="_error_estilotechpack_txtCC">Incorrrect Format</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Subject</label>
                            <div class="col-sm-10">
                                <input class="form-control _enty" id="txtSubject" data-required="true" data-min="1" data-max="2000" data-id="subject_mail" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control _enty" id="txt_bodymail_estilotechpack" rows="4" style="resize: none;" data-required="true" data-min="1" data-id="body_mail"></textarea>
                        </div>
                    </div>
                </div>
                <div class="table-responsive m-t">
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>File</th>
                            </tr>
                        </thead>
                        <tbody id="tbody_correo_estilotechpack"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>