<style>
    .modal-open {
        overflow: auto;
        padding-right: 0 !important;
    }
      th {
        /*white-space: nowrap;*/
        padding: 8px;
        border: 1px solid #e7e7e7;
        background-color: #F5F5F6;
        text-align:center;
    }

    td {
        /*white-space: nowrap;*/
        padding: 5px;
         border-bottom: 1px solid #e7e7e7;
         padding-left: 20px;
    }
     textarea {
        resize: none;
    }
